<core:FragmentDefinition height="100%" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m">
	<Page id="wizardReviewPage" title="Bewerbung überpüfen">
		<content>
			<form:Form title="{i18n>wizardSteptitle1}" minWidth="1024" editable="false">
				<form:layout>
					<form:ResponsiveGridLayout/>
				</form:layout>
				<form:FormContainer>
					<form:title>
						<core:Title text="{i18n>wizardPersonalData}"/>
					</form:title>
					<form:FormElement label="{i18n>wizardGender}">
						<Text text="{dataModel>/Applicant/Gender}"/>
					</form:FormElement>
					<form:FormElement label="{i18n>wizardSurname}">
						<Text text="{dataModel>/Applicant/Lastname}"/>
					</form:FormElement>
					<form:FormElement label="{i18n>wizardForename}">
						<Text text="{dataModel>/Applicant/Firstname}"/>
					</form:FormElement>
					<form:FormElement label="{i18n>wizardBirthdate}">
						<Text text="{dataModel>/Applicant/Birthdate}"/>
					</form:FormElement>
					<form:FormElement label="{i18n>wizardStreet}">
						<Text text="{dataModel>/Applicant/Street}"/>
					</form:FormElement>
					<form:FormElement label="{i18n>wizardZipCity}">
						<Text text="{dataModel>/Applicant/Zipcode} {dataModel>/Applicant/City}"/>
					</form:FormElement>
				</form:FormContainer>
				<form:FormContainer>
					<form:title>
						<core:Title text="{i18n>wizardContactData}"/>
					</form:title>
					<form:FormElement label="{i18n>wizardEmail}">
						<Text text="{dataModel>/Applicant/Email}"/>
					</form:FormElement>
					<form:FormElement label="{i18n>wizardPhone}">
						<Text text="{dataModel>/Applicant/Phone}"/>
					</form:FormElement>
					<form:FormElement label="{i18n>wizardMobile}">
						<Text text="{dataModel>/Applicant/Mobile}"/>
						<Link press="editStepOne" text="Edit"/>
					</form:FormElement>
				</form:FormContainer>
			</form:Form>
			<form:Form title="{i18n>wizardSteptitle2}" editable="false">
				<form:layout>
					<form:ResponsiveGridLayout/>
				</form:layout>
				<form:FormContainer formElements="{path: 'dataModel>/Positions'}" visible="{= ${dataModel>/Positions}.length !== 0}">
					<form:title>
						<core:Title text="Stellen"/>
					</form:title>
					<form:FormElement
						label="{parts: [{path: 'dataModel>/Positions'}, {path: 'dataModel>PositionId'}], formatter: '.formatter.formatLabelStellen'}">
						<Text text="• {dataModel>Name}"/>
					</form:FormElement>
				</form:FormContainer>
				<form:FormContainer visible="{= ${dataModel>/Positions}.length === 0}">
					<form:title>
						<core:Title text="Stellen"/>
					</form:title>
					<form:FormElement label="Stellen">
						<Text text="Keine Stellen (Initiativbewerbung)"/>
						<Link press="editStepTwo" text="Edit" visible="false"/>
					</form:FormElement>
				</form:FormContainer>
				<form:FormContainer formElements="{path: 'dataModel>/Sources'}" visible="{= ${dataModel>/Sources}.length !== 0}">
					<form:title>
						<core:Title text="Quellen"/>
					</form:title>
					<form:FormElement
						label="{parts: [{path: 'dataModel>/Sources'}, {path: 'dataModel>SourceId'}], formatter: '.formatter.formatLabelQuellen'}">
						<Text text="• {dataModel>Name}"/>
						<Link press="editStepTwo" text="Edit"
							visible="{parts: [{path: 'dataModel>/Sources'}, {path: 'dataModel>SourceId'}], formatter: '.formatter.formatQuellenVisibleIfLast'}"/>
					</form:FormElement>
				</form:FormContainer>
				<form:FormContainer visible="{= ${dataModel>/Sources}.length === 0}">
					<form:title>
						<core:Title text="Quellen"/>
					</form:title>
					<form:FormElement label="Quellen">
						<Text text="Keine Quellen"/>
						<Link press="editStepTwo" text="Edit"/>
					</form:FormElement>
				</form:FormContainer>
			</form:Form>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="Submit" press="onWizardSubmit"></Button>
					<Button text="Cancel" press="onWizardCancel"></Button>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:FragmentDefinition>