<mvc:View controllerName="de.fis.applicationwizard.controller.Wizard" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns="sap.m">
	<NavContainer id="wizardNavContainer">
		<Page id="wizardContentPage" title="Bewerbung anlegen">
			<Wizard id="CreateApplicationWizard" finishButtonText="{i18n>wizardFinishButtonText}" complete="onWizardCompleted">
				<WizardStep title="{i18n>wizardSteptitle1}" validated="true">
					<form:SimpleForm id="formBewerber" editable="true" layout="ResponsiveGridLayout">
						<core:Title text="{i18n>wizardPersonalData}"/>
						<Label text="{i18n>wizardGender}"/>
						<SegmentedButton selectedKey="{dataModel>/Applicant/Gender}">
							<items>
								<SegmentedButtonItem key="m" text="{i18n>wizardMale}"/>
								<SegmentedButtonItem key="w" text="{i18n>wizardFemale}"/>
							</items>
						</SegmentedButton>
						<Label text="{i18n>wizardSalutation}"/>
						<Input value="{dataModel>/Applicant/Salutation}"/>
						<Label text="{i18n>wizardSurname}"/>
						<Input value="{dataModel>/Applicant/Lastname}"/>
						<Label text="{i18n>wizardForename}"/>
						<Input value="{dataModel>/Applicant/Firstname}"/>
						<Label text="{i18n>wizardBirthdate}"/>
						<DatePicker dateValue="{dataModel>/Applicant/Birthdate}"/>
						<Label text="{i18n>wizardStreet}"/>
						<Input value="{dataModel>/Applicant/Street}"/>
						<Label text="{i18n>wizardZipCity}"/>
						<Input value="{dataModel>/Applicant/Zipcode}">
							<layoutData>
								<l:GridData span="L3 M12 S12"/>
							</layoutData>
						</Input>
						<Input value="{dataModel>/Applicant/City}"/>
						<core:Title text="{i18n>wizardContactData}"/>
						<Label text="{i18n>wizardEmail}"/>
						<Input value="{dataModel>/Applicant/Email}"/>
						<Label text="{i18n>wizardPhone}"/>
						<Input value="{dataModel>/Applicant/Phone}"/>
						<Label text="{i18n>wizardMobile}"/>
						<Input value="{dataModel>/Applicant/Mobile}"/>
					</form:SimpleForm>
				</WizardStep>
				<WizardStep validated="true" title="{i18n>wizardSteptitle2}" activate="additionalInfoValidation">
					<form:SimpleForm editable="true">
						<core:Title text="Stellen"/>
						<MultiComboBox id="multiComboBoxPositions" items="{path: 'applmanModel>/Positions', sorter: {path: 'Name'}}" selectionFinish="onPositionsFinished">
							<core:Item key="{applmanModel>PositionId}" text="{applmanModel>Name}"/>
						</MultiComboBox>
						<core:Title text="Quellen"/>
						<MultiComboBox id="multiComboBoxSources" items="{path: 'applmanModel>/Sources'}" selectionFinish="onSourcesFinished">
							<core:Item key="{applmanModel>SourceId}" text="{applmanModel>Name}"/>
						</MultiComboBox>
					</form:SimpleForm>
