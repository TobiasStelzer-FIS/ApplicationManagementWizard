				</WizardStep>
				<WizardStep validated="true" title="{i18n>wizardSteptitle3}" activate="">
					<l:Grid defaultSpan="XL6 L6 M12 S12" defaultIndent="XL0 L0 M0 S0">
						<Table id="tableDateien" items="{path: 'bewerberModel>/Dateien'}" noDataText="{i18n>wizardNoDataTextDateien}" inset="true" mode="Delete"
							delete="onDeleteDatei" updateFinished="onDateienUpdateFinished">
							<headerToolbar>
								<Toolbar>
									<Title text="{wizardView>/dateienTitle}" level="H2"/>
									<ToolbarSpacer/>
									<Button icon="sap-icon://add" press="onAddDatei"/>
								</Toolbar>
							</headerToolbar>
							<items>
								<ColumnListItem>
									<Text text="{bewerberModel>Anzeigetext}"/>
								</ColumnListItem>
							</items>
						</Table>
						<l:VerticalLayout class="sapUiLargeMarginTop">
							<Title text="Foto" level="H2"/>
							<u:FileUploader id="fileUploader" name="myFileUpload" uploadUrl="upload/" width="400px" tooltip="Upload your file to the local server"
								uploadComplete="onUploadComplete"/>
							<Button text="Hochladen" press="onUploadPress"/>
						</l:VerticalLayout>
					</l:Grid>
